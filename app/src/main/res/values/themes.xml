<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bridge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BA13B8</item>
        <item name="colorPrimaryVariant">#980273</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_dark_onPrimary</item>
        <item name="colorSecondaryVariant">@color/md_theme_dark_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#BA13B8</item>
        <item name="colorPrimaryDark">#980273</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#BA13B8</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen</item>
        <item name="windowSplashScreenIconBackgroundColor">#BA13B8</item>
        <item name="postSplashScreenTheme">@style/Theme.Bridge</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="AppTheme.Text.BodyLink" parent="AppTheme.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.Bridge.Text">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Bridge.Text.Profile">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Theme.Bridge.Text.Profile.ItemTitle">
        <item name="android:fontFamily">@font/futura_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/item_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Bridge.Text.Profile.ItemText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#575656</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Bridge.Text.EventDetails">
        <item name="android:fontFamily">@font/futura_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Bridge.Text.Event">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Bridge.Text.Event.Title">
        <item name="android:fontFamily">@font/futura_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Bridge.Text.Event.ItemText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#575656</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Text.Title" parent="Theme.Bridge.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="AppTheme.Text.UserTitle" parent="AppTheme.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.UserDescription" parent="AppTheme.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AppTheme.Text.EventTitle" parent="Theme.Bridge.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="App.ThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/purple</item>
        <item name="android:fontFamily">@font/futura_medium</item>
        <item name="fontFamily">@font/futura_medium</item>
    </style>
</resources>